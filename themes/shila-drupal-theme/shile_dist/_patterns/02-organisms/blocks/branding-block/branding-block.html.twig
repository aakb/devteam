{% extends "@organisms/blocks/block/block.html.twig" %}
{#
/**
 * @see templates/form/block--system-branding-block.html.twig
 */
#}
{% block content %}
  {% if site_logo %}
    <h1><a href="{{ site_home_url }}" title="{{ site_home_title }}" rel="home" class="block--branding__logo">
      <img src="{{ site_logo }}" alt="{{ site_home_title }}" />
    </a></h1>
  {% endif %}
  {% if site_name %}
    <a href="{{ site_home_url }}" title="{{ site_home_title }}" rel="home" class="block--branding__name">{{ site_name }}</a>
  {% endif %}
  {% if site_slogan %}
    <span class="block--branding__slogan">{{ site_slogan }}</span>
  {% endif %}
{% endblock %}
